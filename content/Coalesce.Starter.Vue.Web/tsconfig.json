{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,

    // useDuseDefineForClassFields=false due to https://github.com/microsoft/TypeScript/issues/45297
    "useDefineForClassFields": false,

    "noEmitOnError": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node", "vitest/globals"],
    "paths": {
      "@/*": ["src/*"],
      "vuetify/lib": ["node_modules/vuetify/types/lib"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
